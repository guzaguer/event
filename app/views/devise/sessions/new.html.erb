<h2>Ingresar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form_group">
    <%= f.label :Correo_Electronico %><br />
    <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'Introduce tu correo electrónico' %>
  </div>

  <div class="field form_group">
    <%= f.label :contraseña %><br />
    <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:'Introduce tu contraseña' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form_group">
      <%= f.check_box :remember_me %>
      <%= f.label :recuerdame %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Ingresar", class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
